<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="policy.app.Views.RegistrationPage"
             BackgroundImage="fon.png"
             >
  <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Margin="25,25">
            <StackLayout Margin="40">
                <Button Text="Назад" Clicked="Button_Clicked"/>
                <Label TextColor="#228bcc" FontSize="Large" Text="Регистрация"/>
            </StackLayout>
            <StackLayout>
                <Entry Text="Телефон или email" />
                <Entry Text="Пароль"/>
                <Entry Text="Повторите пароль"/>
                <Entry Text="Укажите возраст"/>
                <Button Text="Зарегистрироваться" TextColor="#19365f" FontSize="Large" HorizontalOptions="CenterAndExpand" Padding="15"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>