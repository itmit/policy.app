<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ex="clr-namespace:policy.app.Controls"
             x:Class="policy.app.Pages.RatingPage">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout>
                <StackLayout Margin="40">
                    <Label TextColor="#228bcc" FontSize="35" Text="Рейтинг пользователей" HorizontalOptions="Center" FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular"/>
                </StackLayout>
                <StackLayout Margin="15" Padding="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand">
                    <Picker Title="Категории" x:Name="Cat" BackgroundColor="#f4f5f6" HorizontalOptions="FillAndExpand">
                        <Picker.Items>
                            <x:String>Политика</x:String>
                            <x:String>Музыка</x:String>
                            <x:String>Кино</x:String>
                            <x:String>Телевидение</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout Margin="15" Padding="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand">
                    <Picker Title="От лучшего к худшему" BackgroundColor="#f4f5f6" HorizontalOptions="FillAndExpand">
                        <Picker.Items>
                            <x:String>От лучшего к худшему</x:String>
                            <x:String>От худшего к лудшему</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <ex:SliderRating Margin="15" Minimum="0" Maximum="100" HorizontalOptions="Fill"/>
                <SearchBar Placeholder="Поиск"  Margin="15"/>
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Column="0" Grid.Row="0" Source="user_picture.png" Margin="5"/>
                    <Label Grid.Column="1" Grid.Row="1" Margin="15" Text="Пестель Яна" VerticalOptions="Center" />
                    <Button Grid.Column="2" Grid.Row="2" Margin="0" Padding="0" TextColor="White" Text="политика" CornerRadius="0" BackgroundColor="#3fe9d7" HorizontalOptions="End" VerticalOptions="Center"/>
                </Grid>
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="user_picture.png" Margin="5"/>
                    <Label Grid.Column="2" Margin="15" Text="Ковалев Денис Викторович" VerticalOptions="Center" />
                    <Button Grid.Column="3" HeightRequest="30" Margin="0" Padding="5" TextColor="White" Text="музыка" CornerRadius="30" BackgroundColor="#f89c49" HorizontalOptions="End"/>
                </Grid>
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="user_picture.png" Margin="5"/>
                    <Label Grid.Column="1" Margin="15" Text="Кирченко Ирина Игоревна" VerticalOptions="Center" />
                    <Button Grid.Column="2" HeightRequest="30" Padding="5" TextColor="White" Text="кино" CornerRadius="30" BackgroundColor="#41f256" HorizontalOptions="End"/>
                </Grid>
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="user_picture.png" Margin="5"/>
                    <Label Grid.Column="1" Margin="15" Text="Сеничев Данил Дмитриевич" VerticalOptions="Center" />
                    <Button Grid.Column="2" HeightRequest="30" Padding="5" TextColor="White" Text="телевиденье" CornerRadius="30" BackgroundColor="#19365f" HorizontalOptions="End"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>