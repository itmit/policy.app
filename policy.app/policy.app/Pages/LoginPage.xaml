<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="policy.app.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding MessageLabel}"/>

            <Entry Placeholder="E-mail" Text="{Binding Email}" />

            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="true"/>

            <Button Text="Войти" Command="{Binding OnLoginButtonClicked}"/>
            <Button Text="Регистрация" Command="{Binding OnRegisterButtonClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>