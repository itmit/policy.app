<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="policy.app.Pages.HomePage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#f4f5f6"
             >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ScrollView>
                <StackLayout Orientation="Vertical" HeightRequest="600">
                    <Image HorizontalOptions="Fill" VerticalOptions="Fill" Source="avatar.png" />
                    <TableView HasUnevenRows="True" RowHeight="-1" HeightRequest="-2">
                        <TableRoot>
                            <TableSection>
                                <ViewCell>
                                    <Grid>
                                        <Label Margin="15" FontSize="Medium" Text="Имя"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                        <Label Margin="15" FontSize="Large" TextColor="#19365f" Text="{Binding Name}"
                                               HorizontalOptions="EndAndExpand"
                                               FontFamily="CormorantGaramondSemibold.ttf#CormorantGaramondSemibold" />
                                    </Grid>
                                </ViewCell>
                                <ViewCell>
                                    <Grid>
                                        <Label Margin="15" FontSize="Medium" Text="Город"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                        <Label Margin="15" FontSize="Medium" TextColor="#19365f" Text="{Binding City}"
                                               HorizontalOptions="EndAndExpand"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                    </Grid>
                                </ViewCell>
                                <ViewCell>
                                    <Grid>
                                        <Label Margin="15" FontSize="Medium" Text="Сфера деятельности"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                        <Label Margin="15" FontSize="Medium" TextColor="#19365f"
                                               Text="{Binding Activity}"
                                               HorizontalOptions="EndAndExpand"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                    </Grid>
                                </ViewCell>
                                <ViewCell>
                                    <Grid>
                                        <Label Margin="15" FontSize="Medium" Text="Организация"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                        <Label Margin="15" FontSize="Medium" TextColor="#19365f"
                                               Text="{Binding Organization}"
                                               HorizontalOptions="EndAndExpand"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                    </Grid>
                                </ViewCell>
                                <ViewCell>
                                    <Grid>
                                        <Label Margin="15" FontSize="Medium" Text="Должность"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                        <Label Margin="15" FontSize="Medium" TextColor="#19365f"
                                               Text="{Binding Doljnost}"
                                               HorizontalOptions="EndAndExpand"
                                               FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular" />
                                    </Grid>
                                </ViewCell>
                            </TableSection>
                        </TableRoot>
                    </TableView>
                    <StackLayout Orientation="Horizontal" Padding="20,0" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                            <Label Text="100" FontSize="50" TextColor="#228bcc" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular"/>
                            <Image Source="img_131540" WidthRequest="40"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                            <Label Text="30" FontSize="50" TextColor="#19365f" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular"/>
                            <Image Source="smail"/>
                        </StackLayout>
                        <StackLayout Grid.Column="2" Orientation="Horizontal" HorizontalOptions="End">
                            <Label Text="60" FontSize="50" TextColor="#f07d14" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular"/>
                            <Image Source="img_1315401" WidthRequest="40"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Source="icon" Margin="0,0,0,0" WidthRequest="40" HorizontalOptions="End"/>
                            <Label Grid.Column="1" FontSize="Large" Text="Статистика" FontFamily="CormorantGaramondRegular.ttf#CormorantGaramondRegular"/>
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <Grid Grid.Row="1" ColumnSpacing="0" RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Margin="0,0,1,1" Text="профиль" HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" BackgroundColor="#e3e9ef" Clicked="Button_OnClicked"
                        FontFamily="CormorantGaramondSemibold.ttf#CormorantGaramondSemibold" FontSize="Medium" />
                <Button Grid.Column="1" Grid.Row="0" Margin="1,0,0,1" Text="каталог" HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" BackgroundColor="#e3e9ef" Clicked="Button_OnClicked2"
                        FontFamily="CormorantGaramondSemibold.ttf#CormorantGaramondSemibold" FontSize="Medium" />
                <Button Grid.Column="0" Grid.Row="1" Margin="0,1,1,0" Text="рейтинг" HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" BackgroundColor="#e3e9ef" Clicked="Button_OnClicked3"
                        FontFamily="CormorantGaramondSemibold.ttf#CormorantGaramondSemibold" FontSize="Medium" />
                <Button Grid.Column="1" Grid.Row="1" Margin="1,1,0,0" Text="о приложении"
                        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="#e3e9ef"
                        Clicked="Button_OnClicked4"
                        FontFamily="CormorantGaramondSemibold.ttf#CormorantGaramondSemibold" FontSize="Medium" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>