                            <Label Text="пройти" TextColor="White" FontSize="Medium" VerticalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Grid>
                    <BoxView HeightRequest="1" BackgroundColor="#dee4ea"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>